    inverse_setting_layer {
      display-name = "~Setting";
      // --------------------------------------        -------------------------------------------
      // |      |     |     |     |     |     |        |     |     |     |     |     |     |     |
      // |        |     |     |     |     |     |        |     |      |     |     |     |        |
      // |         |     |     |     |     |     |   |     |     |     |     |     |     |       |
      // |      |      |      |      |           |   |           |     | <Joystick>  |     |     |
      // ---------------      --------------------   -------------------             -------------

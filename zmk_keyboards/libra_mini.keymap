    right_thumb_layer {
      display-name = "R Thumb";
      // --------------------------------------        -------------------------------------------
      // |   `  |  1  |  2  |  3  |  4  |  5  |        |  !  |  @  |  #  |  $  |  %  |     | ESC |
      // |        |  6  |  7  |  8  |  9  |  0  |        |  ^  |  &   |  *  |  (  |  )  |   "    |
      // |         |  -  |  =  |  \  |  [  |  ]  |   |     |  _  |  +  |  |  |  {  |  }  |       |
      // |      |      |      |      |           |   |           |     | <Joystick>  |     |     |
      // ---------------      --------------------   -------------------             -------------

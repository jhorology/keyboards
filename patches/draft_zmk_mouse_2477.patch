+             {                                                                                     \
+                 .base = IL_EXTRACT_CONFIG(DT_DRV_INST(n), n, base),                               \
+                 .layer_overrides_len = (0 DT_INST_FOREACH_CHILD(n, IL_ONE)),                      \
+                 .layer_overrides = {DT_INST_FOREACH_CHILD_SEP_VARGS(n, IL_OVERRIDE, (, ), n)},    \
+             };                                                                                    \
+         static struct input_listener_data data_##n =                                              \
+             {                                                                                     \

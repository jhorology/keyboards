+    COND_CODE_1(                                                                                   \
+        DT_NODE_HAS_STATUS(DT_INST_PHANDLE(n, device), okay),                                      \
+        (SCOPED_PROCESSOR(base, DT_DRV_INST(n), n);                                                \
+         DT_INST_FOREACH_CHILD_VARGS(n, CHILD_CONFIG,                                              \
